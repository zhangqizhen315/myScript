# google-chrome --app=https://web.wechat.com/
#
mode "open" {
        bindsym q exec qq ; mode "default"
        bindsym w exec google-chrome --app=https://web.wechat.com/; mode "default"
        bindsym shift+w exec google-chrome --app=https://en.wikipedia.org/wiki/ ; mode "default"
        bindsym e exec google-chrome ; mode "default"
        bindsym r exec xfce4-terminal -e ranger --role=floating ; mode "default"
        bindsym t exec xfce4-terminal ; mode "default"
        bindsym i exec xfce4-terminal -e /home/zhang/myScript/essay.sh --role=floating ; mode "default"
        bindsym p exec peek; mode "default"
        bindsym a exec audacity  ; mode "default"
        bindsym shift+a exec anki ; mode "default"
        bindsym ctrl+a exec /home/zhang/myScript/moXie/answer.sh --role=floating ; mode "default"
        bindsym s exec myScript/allgit.sh ; mode "default"
        bindsym f exec nautilus ; mode "default"
        bindsym d exec wps ; mode "default"
        bindsym k exec xfce4-terminal -e /home/zhang/kjv/kjv --role=floating; mode "default"
        bindsym l exec libreoffice  ; mode "default"
        bindsym c exec xfce4-terminal -e calcurse --role=floating ; mode "default"
        bindsym v exec xfce4-terminal -e vim  ; mode "default"
        bindsym n exec xfce4-terminal -e /home/zhang/myScript/moXie/creatQuestion.sh --role=floating ; mode "default"
        bindsym m exec xfce4-terminal -e /home/zhang/myScript/moXie/memory.sh --role=floating ; mode "default"

        bindsym Escape mode "default"
}

